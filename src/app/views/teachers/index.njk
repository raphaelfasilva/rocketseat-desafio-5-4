{% extends "layout.njk" %}
{% block header %}
    <title>Professores</title>
{% endblock %}
{% block content %}
    <div class="card table-container">
        <div class="header">
            <a class="botao-novo" href="/teachers/create">Novo</a>
            <form action="/teachers" method="get">
            <input 
            type="text"
            name="filter"
            placeholder"Filtrar por nome"
            value="{{filter}}"
            >
            <button type="submit">filtrar</button>
            </form>
        </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{teacher.avatar_url}})"></span>
                            {{teacher.name}}
                        </td>
                        <td>
                             {% for areas in teacher.areas %}
                             <span class="tag">{{areas}}</span>
                             {% endfor %}
                        </td>
                        <td>
                            <a href="/teachers/{{teacher.id}}">Editar</a></td>
                    </tr>
                {% endfor %}
            </tbody>

        </table>
        <div class="pagination"
         data-page={{pagination.page}}
         data-total={{pagination.total}}
         data-limit={{limit}}
         data-filter={{filter}}
        >
        </div>
    </div>
{% endblock %}